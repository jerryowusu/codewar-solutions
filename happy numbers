function numbSquareSum(number) {
    let squareSum = 0; 

    while (number > 0) {
        squareSum += (number % 10) ** 2
        number = parseInt(number / 10)
    }
    return squareSum
}



function happyNumber(number) {
    let slow, fast

    slow = fast = number;

    do {
        slow = numbSquareSum(slow)
        fast = numbSquareSum(numbSquareSum(fast))
    }
    while (slow != fast);

    return (slow === 1)
}

console.log(happyNumber(29))
console.log(happyNumber(13))
console.log(happyNumber(50))
console.log(happyNumber(5065))
